#!/bin/sh
#
# Start cvr-mil-qt
#

DAEMON=/usr/bin/cvr-mil-qt
NAME=cvr-mil-qt
PIDFILE=/var/run/cvr-mil-qt.pid

case "$1" in
	start)
		echo "Starting ${NAME} ..."                
		start-stop-daemon -S -b -m -n ${NAME} -p ${PIDFILE} -x ${DAEMON}
		;;
	stop)
		echo "Stopping ${NAME} ..."
		start-stop-daemon -K -n ${NAME} -p ${PIDFILE}
		;;
	restart|reload)
		echo "Restarting ${NAME} ..."
		start-stop-daemon -K -n ${NAME} -p ${PIDFILE}
		start-stop-daemon -S -b -m -n ${NAME} -p ${PIDFILE} -x ${DAEMON}
		;;
	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
		;;
esac

exit $?
