#!/bin/sh

init() {
	echo "Initialize Hi3531 BSP ..."

	./load3531 -i 1hd

	#config for USB power
	himm 0x20050080 0x31A8
	himm 0x200f0148 0
	himm 0x200f014c 0

	himm 0x201f0400 0x0c
	himm 0x201f0030 0x04
	
	#config viu3 bt1120
	himm 0x200f00ec 0x00
	himm 0x200f00f0 0x00
	himm 0x200f00f4 0x00
	himm 0x200f00f8 0x00
	himm 0x200f00fc 0x00
	himm 0x200f0100 0x00
	himm 0x200f0104 0x00
	himm 0x200f0108 0x00
	himm 0x200f010c 0x00
	himm 0x200f0110 0x00
	himm 0x200f0114 0x00
	himm 0x200f0118 0x00
	himm 0x200f011c 0x00
	himm 0x200f0120 0x00
	himm 0x200f0124 0x00
	himm 0x200f0128 0x00
	himm 0x200f012c 0x00
	himm 0x200f0130 0x00
	himm 0x200f0134 0x00
}

case $1 in
	start)
		cd /ko && init
		;;
	stop)
		;;
	reload|restart)
		;;
	*)
		echo "Usage: $0 [start|stop|reload|restart]"
		exit 1
		;;
esac

exit $?
