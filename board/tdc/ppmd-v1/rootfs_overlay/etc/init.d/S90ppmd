#!/bin/sh
#
# Start ppmd
#

DAEMON=/usr/bin/ppmd
NAME=ppmd
PIDFILE=/var/run/ppmd.pid

case "$1" in
	start)
		echo "Starting ${NAME} ..."                
		start-stop-daemon -S -b -m -n ${NAME} -p ${PIDFILE} -x ${DAEMON}
		;;
	stop)
		echo "Stopping ${NAME} ..."
		start-stop-daemon -K -n ${NAME} -p ${PIDFILE}
		;;
	restart|reload)
		echo "Restarting ${NAME} ..."
		start-stop-daemon -K -n ${NAME} -p ${PIDFILE}
		start-stop-daemon -S -b -m -n ${NAME} -p ${PIDFILE} -x ${DAEMON}
		;;
	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
		;;
esac

exit $?
