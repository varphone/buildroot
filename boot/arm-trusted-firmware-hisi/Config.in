config BR2_TARGET_ARM_TRUSTED_FIRMWARE_HISI
	bool "arm-trusted-firmware (hisillicon)"
	help
	  ARM Trusted Firmware provides a reference implementation of secure world
	  software for [ARMv8-A], including a [Secure Monitor] [TEE-SMC] executing at
	  Exception Level 3 (EL3). It implements various ARM interface standards, such as
	  the Power State Coordination Interface ([PSCI]), Trusted Board Boot Requirements
	  (TBBR, ARM DEN0006C-1) and [SMC Calling Convention][SMCCC]. As far as possible
	  the code is designed for reuse or porting to other ARMv8-A model and hardware
	  platforms.

if BR2_TARGET_ARM_TRUSTED_FIRMWARE_HISI

choice
        prompt "Chipset"

config BR2_TARGET_ARM_TRUSTED_FIRMWARE_HISI_CHIP_HI3559AV100
	bool "hi3559av100"

endchoice

config BR2_TARGET_ARM_TRUSTED_FIRMWARE_HISI_CHIP
	string
	default "hi3559av100" if BR2_TARGET_ARM_TRUSTED_FIRMWARE_HISI_CHIP_HI3559AV100

choice
        prompt "CPU Type"

config BR2_TARGET_ARM_TRUSTED_FIRMWARE_HISI_CPU_TYPE_BIG_LITTLE
	bool "big-little"

config BR2_TARGET_ARM_TRUSTED_FIRMWARE_HISI_CPU_TYPE_MULTI_CORE
	bool "multi-core"

endchoice

config BR2_TARGET_ARM_TRUSTED_FIRMWARE_HISI_CPU_TYPE
	string
	default "big-little" if BR2_TARGET_ARM_TRUSTED_FIRMWARE_HISI_CPU_TYPE_BIG_LITTLE
	default "multi-core" if BR2_TARGET_ARM_TRUSTED_FIRMWARE_HISI_CPU_TYPE_MULTI_CORE

endif

