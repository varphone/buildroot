menuconfig BR2_PACKAGE_HISILICON
	bool "Hisilicon platform supports"
	depends on BR2_arm
	help
	  Those packages provide hisilicon platform supports.

if BR2_PACKAGE_HISILICON

choice
	prompt "Hisilicon platform"

config BR2_PACKAGE_HISILICON_PLATFORM_HI3516
	bool Hi3516

config BR2_PACKAGE_HISILICON_PLATFORM_HI3531
	bool Hi3531

endchoice

config BR2_PACKAGE_HISILICON_PLATFORM
	string
	default Hi3516 if BR2_PACKAGE_HISILICON_PLATFORM_HI3516
	default Hi3531 if BR2_PACKAGE_HISILICON_PLATFORM_HI3531

choice
	prompt "Hisilicon sdk version"

config BR2_PACKAGE_HISILICON_SDK_VERSION_V1_0_D_0
	bool V1.0.D.0

config BR2_PACKAGE_HISILICON_SDK_VERSION_V2_0_A_0
	bool V2.0.A.0

endchoice

config BR2_PACKAGE_HISILICON_SDK_VERSION
	string
	default V1.0.D.0 if BR2_PACKAGE_HISILICON_SDK_VERSION_V1_0_D_0
	default V2.0.A.0 if BR2_PACKAGE_HISILICON_SDK_VERSION_V2_0_A_0

source "package/hisilicon/mpp-ko/Config.in"
source "package/hisilicon/mpp-lib/Config.in"
source "package/hisilicon/reg-tools/Config.in"

endif
