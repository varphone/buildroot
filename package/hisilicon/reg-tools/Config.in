comment "reg-tools needs a Linux kernel to be built"
	depends on !BR2_LINUX_KERNEL

config BR2_PACKAGE_REG_TOOLS
	bool "reg-tools"
	depends on BR2_LINUX_KERNEL
	depends on BR2_PACKAGE_HISILICON
	help
	  Userspace register tools for Hi3516/Hi3531/Hi3520D.

config BR2_PACKAGE_REG_TOOLS_GPIO_I2C
	bool "Use GPIO I2C"
	depends on BR2_PACKAGE_REG_TOOLS

config BR2_PACKAGE_REG_TOOLS_CUSTOM_VERSION
	bool "Custom version"
	depends on BR2_PACKAGE_REG_TOOLS
	help
	  This option allows to use a specific official version from git.

config BR2_PACKAGE_REG_TOOLS_CUSTOM_VERSION_VALUE
	string "git tag version for reg-tools"
	default "1.0.0-Hi3531_SDK_V1.0.D.0"
	depends on BR2_PACKAGE_REG_TOOLS_CUSTOM_VERSION
	help
	  The version string does not include the prefix 'v'.
