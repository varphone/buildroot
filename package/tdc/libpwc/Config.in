config BR2_PACKAGE_LIBPWC
	bool "libpwc"
	depends on BR2_PACKAGE_TDC
	select BR2_PACKAGE_LIBMODBUS
	help
	  Serial Port library for PPMD-V1.

config BR2_PACKAGE_LIBPWC_CUSTOM_VERSION
	bool "libpwc custom version"
	depends on BR2_PACKAGE_LIBPWC
	help
	  This option allows to use a specific official version from git.

config BR2_PACKAGE_LIBPWC_CUSTOM_VERSION_VALUE
	string "libpwc git tag version"
	default "1.0.3"
	depends on BR2_PACKAGE_LIBPWC_CUSTOM_VERSION
