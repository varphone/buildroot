comment "radar-qt needs imx-lib, qt"
	depends on !BR2_PACKAGE_IMX_LIB || !BR2_PACKAGE_QT

config BR2_PACKAGE_RADAR_QT
	bool "radar-qt"
	depends on BR2_PACKAGE_TDC
	help
	  Radar application for 6A.

config BR2_PACKAGE_RADAR_QT_CUSTOM_VERSION
	bool "radar-qt custom version"
